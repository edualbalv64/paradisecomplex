<section id="contact" class="py-20 contact-section">
  <div class="max-w-5xl mx-auto px-6">
    <h2
      class="text-[28px] md:text-[36px] font-bold text-center mb-4 description"
    >
      Get In Touch
    </h2>
    <p class="text-center description mb-12 form-inputs text-sm md:text-xl">
      Fill out the form below and we'll get back to you with all the details.
      Your new home in Guanacaste could be closer than you think!
    </p>

    <div class="bg-white rounded-2xl shadow-lg p-8">
      <form
        class="space-y-6"
        method="POST"
        action="https://formspree.io/f/xeozqjjk"
      >
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <input
            type="text"
            name="name"
            placeholder="Name"
            class="form-inputs w-full px-4 py-4 contact-section border-0 rounded-lg text-gray-700 placeholder-gray-500 focus:bg-white focus:ring-2 focus:outline-none transition-all"
            required
          />
          <input
            type="text"
            name="lastName"
            placeholder="Last Name"
            class="form-inputs w-full px-4 py-4 contact-section border-0 rounded-lg text-gray-700 placeholder-gray-500 focus:bg-white focus:ring-2 focus:outline-none transition-all"
            required
          />
        </div>

        <input
          type="email"
          name="email"
          placeholder="Email Address"
          class="form-inputs w-full px-4 py-4 contact-section border-0 rounded-lg text-gray-700 placeholder-gray-500 focus:bg-white focus:ring-2 focus:outline-none transition-all"
          required
        />

        <input
          type="tel"
          name="phone"
          placeholder="Phone Number"
          class="form-inputs w-full px-4 py-4 contact-section border-0 rounded-lg text-gray-700 placeholder-gray-500 focus:bg-white focus:ring-2 focus:outline-none transition-all"
        />

        <button
          type="submit"
          class="form-brand-submit w-full py-3 bg-gray-800 hover:bg-gray-900 text-white font-semibold rounded-lg transition-colors duration-200 text-xs md:text-xl"
        >
          Submit
        </button>
      </form>
    </div>
  </div>
</section>

<style>
  .description {
    color: #212121;
    font-family: "DM Serif Display", serif;
    font-weight: 400;
  }

  .contact-section {
    background-color: #f5f5f5;
  }

  .form-brand-submit {
    font-family: "DM Serif Display", serif;
    font-weight: 400;
  }

  .form-inputs {
    font-family: "Lexend", sans-serif;
    font-weight: 500;
  }
</style>
