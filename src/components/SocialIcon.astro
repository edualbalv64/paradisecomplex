---
// Import SVG icons
import TikTokIcon from "./icons/TikTok.svg?raw";
import InstagramIcon from "./icons/Instagram.svg?raw";
import YouTubeIcon from "./icons/YouTube.svg?raw";

export interface Props {
  href?: string;
  type: "instagram" | "youtube" | "facebook" | "tiktok";
}

const { href, type } = Astro.props;

// Map icon types to imported SVG content
const iconContent = {
  tiktok: TikTokIcon,
  instagram: InstagramIcon,
  youtube: YouTubeIcon,
  facebook: `<svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M12 2.04C6.5 2.04 2 6.53 2 12.06C2 17.06 5.66 21.21 10.44 21.96V14.96H7.9V12.06H10.44V9.85C10.44 7.34 11.93 5.96 14.22 5.96C15.31 5.96 16.45 6.15 16.45 6.15V8.62H15.19C13.95 8.62 13.56 9.39 13.56 10.18V12.06H16.34L15.89 14.96H13.56V21.96A10 10 0 0 0 22 12.06C22 6.53 17.5 2.04 12 2.04Z" fill="currentColor"/></svg>`,
};
---

{
  href ? (
    <a
      href={href}
      class="social-button"
      target="_blank"
      rel="noopener noreferrer"
    >
      <Fragment set:html={iconContent[type]} />
    </a>
  ) : (
    <div class="social-button">
      <Fragment set:html={iconContent[type]} />
    </div>
  )
}

<style>
  .social-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    color: #000000;
    text-decoration: none;
    cursor: pointer;
  }
  .social-button svg {
    width: 30px;
    height: 30px;
  }
</style>
